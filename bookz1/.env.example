# SMS Pilot Configuration
# Copy this file to .env and fill in your values

# SMS Pilot API Key
# Get your API key at https://smspilot.ru/apikey.php
# Use 'emulator' for testing without sending real SMS
SMSPILOT_API_KEY=emulator

# Sender name (must be registered in your SMS Pilot account)
SMSPILOT_SENDER=BookSystem

# Test mode - set to 'false' in production to send real SMS
SMSPILOT_TEST_MODE=true

# Database Configuration (optional - override for different environments)
# DB_HOST=localhost
# DB_NAME=bookz1
# DB_USER=root
# DB_PASSWORD=
